<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" 
          xmlns:core="sap.ui.core"  xmlns:f="sap.ui.layout.form" xmlns:layout="sap.ui.layout" xmlns:viz="sap.viz.ui5.controls" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds" xmlns:viz.data="sap.viz.ui5.data"
          controllerName="com.sap.listbindingmasterdetailsapp.controller.Supplier">
    <Page title="Supplier Details" showNavButton="true" navButtonPress="onBack">
        <!-- <Button id="idBtnBack" text="Back" press="onBack"/> -->
        <content>
            <ObjectHeader title="{name}" icon="sap-icon://supplier"
                          intro="{sinceWhen}"
                          number="{person}" numberUnit="{contactNo}"
            ></ObjectHeader>
            <layout:FixFlex id='chartFixFlex' minFlexSize="250">
                <layout:flexContent>
                    <viz:Popover id="idPopOver"></viz:Popover>
                    <viz:VizFrame id="idVizFrame" uiConfig="{applicationSet:'fiori'}"
                        height='100%' width="100%" vizType='donut'>
                        <viz:dataset>
                            <viz.data:FlattenedDataset data="{specialty}">
                                <viz.data:dimensions>
                                    <viz.data:DimensionDefinition name="Name"
                                        value="{/name}" />
                                </viz.data:dimensions>
                                <viz.data:measures>
                                    <viz.data:MeasureDefinition name="Supply"
                                        value="{/supply}" />
                                </viz.data:measures>
                            </viz.data:FlattenedDataset>
                        </viz:dataset>
                    </viz:VizFrame>
                </layout:flexContent>
            </layout:FixFlex>

        </content>
        <footer>
            <Toolbar >
                <ToolbarSpacer ></ToolbarSpacer>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>