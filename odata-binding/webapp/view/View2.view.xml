<mvc:View controllerName="com.sap.odatabinding.controller.View2"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" xmlns:core="sap.ui.core">
    <Page id="detailPage" title="View 2" showNavButton="true" navButtonPress="onBack">
        <content>
            <ObjectHeader title="{ProductID}" icon="sap-icon://product"
                          intro="{ProductName}"
                          number="{UnitPrice}"
            ></ObjectHeader>
            <IconTabBar>
                <items>
                    <IconTabFilter text="More Info" icon="sap-icon://warning">
                        <core:Fragment id="a" fragmentName="com.sap.odatabinding.fragments.moreInfo" type="XML" />
                    </IconTabFilter>
                    <IconTabFilter text="Suppliers" icon="sap-icon://supplier">
                        
                    </IconTabFilter>
                    <IconTabFilter text="Cities" icon="sap-icon://home">
                        
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>
        <footer>
            <Toolbar >
                <ToolbarSpacer ></ToolbarSpacer>
                <Button text="Save" icon="sap-icon://save" type="Accept" press="onSave"></Button>
                <Button text="Cancel" icon="sap-icon://cancel" type="Reject" press="onCancel"></Button>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>