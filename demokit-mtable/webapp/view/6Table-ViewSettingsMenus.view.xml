<mvc:View controllerName="com.sap.demokitmtable.controller.6Table-ViewSettingsMenus"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" xmlns:core="sap.ui.core">
    <Page id="ViewSettingsMenus" title="Table-View Settings and Menus" showNavButton="true" navButtonPress="onNavBack">
        <Table id="idViewSettingsMenusTable" inset="true" items="{ path: '/Products', sorter: { path: 'ProductName'} }">
            <headerToolbar>
				<OverflowToolbar>
						<Title text="Products" level="H2"/>
						<ToolbarSpacer />
						<Button
							tooltip="Sort"
							icon="sap-icon://sort"
							press="handleSortButtonPressed"/>
						<Button
							tooltip="Filter"
							icon="sap-icon://filter"
							press="handleFilterButtonPressed"/>
						<Button
							tooltip="Group"
							icon="sap-icon://group-2"
							press="handleGroupButtonPressed"/>
						<ToggleButton icon="sap-icon://menu" tooltip="Enable Custom Context Menu" press="onToggleContextMenu" />
				</OverflowToolbar>
			</headerToolbar>
			<infoToolbar>
				<OverflowToolbar id="vsdFilterBar" visible="false">
					<Text id="vsdFilterLabel" />
				</OverflowToolbar>
			</infoToolbar>
			<columns>
				<Column
					width="12em" id="product" headerMenu="columnHeaderMenu">
					<Text text="Product" />
				</Column>
				<Column
					minScreenWidth="Tablet"
					demandPopin="true">
					<Text text="SupplierID" />
				</Column>
				<Column
					minScreenWidth="Desktop"
					demandPopin="true"
					hAlign="End">
					<Text text="QuantityPerUnit" />
				</Column>
				<Column
					minScreenWidth="Desktop"
					demandPopin="true"
					hAlign="Center">
					<Text text="Discontinued" />
				</Column>
				<Column
					hAlign="End">
					<Text text="UnitPrice" />
				</Column>
			</columns>
			<items>
				<ColumnListItem vAlign="Middle">
					<cells>
						<ObjectIdentifier
							title="{ProductName}"
							text="{ProductID}"/>
						<Text
							text="{SupplierID}" />
						<Text
							text="{QuantityPerUnit}" />
						<Text
							text="{Discontinued}" />
						<Text
							text="{UnitPrice}" />
					</cells>
				</ColumnListItem>
			</items>
        </Table>
		<footer>
			<OverflowToolbar >
				<ToolbarSpacer/>
				<Button text="Go to next page" press="onPressNext"></Button>
			</OverflowToolbar>
		</footer>
    </Page>
</mvc:View>