<mvc:View controllerName="com.sap.demokitmtable.controller.3Table-BreadCrumb"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" xmlns:core="sap.ui.core">
    <Page id="BreadCrumb" title="Table-BreadCrumb" showNavButton="true" navButtonPress="onNavBack">
        <Table id="idBreadCrumbTable" selectionChange="handleSelectionChange" inset="false">
            <headerToolbar>
				<OverflowToolbar>
					<Breadcrumbs id="breadcrumb" />
				</OverflowToolbar>
			</headerToolbar>
            <infoToolbar>
                <OverflowToolbar visible="{Order>/hasCounts}">
                    <Label text="{Order>/count} Products Selected" />
                </OverflowToolbar>
            </infoToolbar>
            <columns>
                <Column width="12em">
                    <Text text="Name" />
                </Column>
                <Column id="dimensionsColumn" minScreenWidth="Tablet" demandPopin="true" hAlign="End" visible="false">
                    <Text text="Dimensions" />
                </Column>
                <Column id="weightColumn" minScreenWidth="Tablet" demandPopin="true" hAlign="Center" visible="false">
                    <Text text="Weight" />
                </Column>
                <Column hAlign="End">
                    <Text text="Price" />
                </Column>
            </columns>
        </Table>
        <footer>
			<OverflowToolbar >
                <Button text="Order" enabled="{ path: 'Order>/', formatter: 'com.sap.demokitmtable.util.Formatter.isAnyProductSelected'}" press="handleOrderPress" />
				<ToolbarSpacer/>
				<Button text="Go to next page" press="onPressNext"></Button>
			</OverflowToolbar>
		</footer>
    </Page>
</mvc:View>