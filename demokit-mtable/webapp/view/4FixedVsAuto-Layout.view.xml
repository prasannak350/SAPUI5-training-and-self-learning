<mvc:View controllerName="com.sap.demokitmtable.controller.4FixedVsAuto-Layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" xmlns:core="sap.ui.core">
    <Page id="FixedVsAuto" title="FixedVsAuto-Layout" showNavButton="true" navButtonPress="onNavBack">
        <Table id="idCategoryNewTable" items="{ path: '/Categories', sorter: { path: 'CategoryName'} }">
            <headerToolbar>
				<OverflowToolbar>
                    <Title text="Categories" level="H2"/>
                    <ToolbarSpacer />
                    <CheckBox text="Fixed Layout" selected="true" select="onCheckBoxSelect"/>
				    <Button text="Open Dialog" press="onOpenPressed"/>
				</OverflowToolbar>
			</headerToolbar>
			<columns>
				<Column>
					<Text text="CategoryName" />
				</Column>
				<Column>
					<Text text="CategoryID" />
				</Column>
				<Column>
					<Text text="Description" />
				</Column>
			</columns>
			<items>
				<ColumnListItem vAlign="Middle" type="Navigation">
					<cells>
						<Text
							text="{CategoryName}" wrapping="false"/>
						<Text
							text="{CategoryID}" wrapping="false"/>
						<Text
							text="{Description}"/>
					</cells>
				</ColumnListItem>
			</items>
        </Table>
		<footer>
			<OverflowToolbar >
				<ToolbarSpacer/>
				<Button text="Go to next page" press="onPressNext"></Button>
			</OverflowToolbar>
		</footer>
    </Page>
</mvc:View>