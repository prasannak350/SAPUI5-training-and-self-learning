<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ViewSettingsDialog
		confirm="handleFilterDialogConfirm">
		<filterItems>
			<ViewSettingsFilterItem
				text="Supplier"
				key="SupplierID"
				multiSelect="false">
				<items>
					<ViewSettingsItem text="Less than 20" key="SupplierID___LE___20___X" />
					<ViewSettingsItem text="Between 20 and 30" key="SupplierID___BT___20___30" />
					<ViewSettingsItem text="More Than 30" key="SupplierID___GT___30___X" />
				</items>
			</ViewSettingsFilterItem>
			<ViewSettingsFilterItem
				text="Price"
				key="UnitPrice"
				multiSelect="false">
				<items>
					<ViewSettingsItem text="Less Than 20" key="UnitPrice___LE___20___X" />
					<ViewSettingsItem text="Between 20 and 40" key="UnitPrice___BT___20___40" />
					<ViewSettingsItem text="More Than 40" key="UnitPrice___GT___40___X" />
				</items>
			</ViewSettingsFilterItem>
		</filterItems>
	</ViewSettingsDialog>
</core:FragmentDefinition>