<core:FragmentDefinition xmlns:core='sap.ui.core' xmlns='sap.m'>
    <Dialog title="Table Dialog">
        <content>
            <Table mode="MultiSelect" items="{path: '/Categories', sorter:{ path: 'CategoryName'}}">
                <headerToolbar>
                    <Toolbar >
                        <Title text="Categories" level="H2"></Title>
                        <ToolbarSpacer ></ToolbarSpacer>
                        <CheckBox text="Fixed Layout" selected="true" select="onCheckBoxSelect"></CheckBox>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column >
                        <Text text="CategoryName"/>
                    </Column>
                    <Column hAlign="End">
                        <Text text="Category ID"></Text>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle" type="Navigation">
                        <cells>
                            <Text text="{CategoryName}" wrapping="false"></Text>
                        </cells>
                        <cells>
                            <Text text="{CategoryID}" wrapping="false"></Text>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <beginButton>
			<Button text="Close" press="onClosePressed" />
		</beginButton>
    </Dialog>
</core:FragmentDefinition>